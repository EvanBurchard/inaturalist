<%- content_for(:title) do -%>
  <%= @title = "#{h truncate(@project.title, :length => 85)} Members" %>
<%- end -%>
<% content_for(:extracss) do %>
<style type="text/css" media="screen">
  td .usericon {
    vertical-align: middle;
  }
  
  td {
    vertical-align: middle;
  }
  
  td .description {
    display: block;
  }
  
  #active .usericon {
    float: left;
  }
  
  #active .attr {
    display: block;
    padding-left: 58px;
    color: #888;
  }
  
  #active .attr strong {
    font-weight: normal;
    color: #333;
  }
  
  #active .attr.login {
    font-size: 120%;
  }
  
  #active .user {
    border-bottom: 1px solid #ddd;
    padding-bottom: 1em;
    margin-bottom: 1em;
  }
  
  #letter_nav {
    font-size: 100%;
    margin-bottom: 1em;
    text-align: left;
  }
  
  #invite {
    float: right;
  }
  
  #invite .button {
    margin-right: 0;
  }
</style>
<% end %>
<div id="pageheader" class="clear">
  <div class="breadcrumbs">
    <strong><%= link_to "&laquo #{h @project.title}", @project, :class => 'crumb' %></strong>
  </div><!-- /#breadcrumbs -->
  
  <h2>
    <% if @project.icon.file? -%>
      <%= image_tag @project.icon.url(:thumb), :style => "vertical-align: middle" %>
    <% end -%>
    <%= @title %>
  </h2>

</div>

<div id="members" style="margin-bottom: 10px">
  <h3>Members</h3>
  <% if @project_users.blank? -%>
    <div class="noresults">
      No members yet.
    </div>
  <% else %>
    <table class="readable">
    <% for project_user in @project_users %>
      <tr>
        <td width="25%">
          <%= link_to image_tag(project_user.user.icon.url(:thumb), :class => 'usericon'),
            observations_by_login_path(project_user.user.login),
            :alt => h(project_user.user.login),
            :title => "#{h(project_user.user.login)}, joined #{project_user.created_at.to_date.to_s(:long)}" %>
          <%= link_to h(project_user.user.login), observations_by_login_path(project_user.user.login) %>
        </td>
        <td width="25%">
          <% if project_user.is_curator? && @project.user_id != project_user.user.id %>
            <span class="description">Curator</span>
          <% elsif @project.user_id == project_user.user.id %>
            <span class="description">Admin</span>
          <% end %>
        </td>
        <td width="25%">
          <% if logged_in? && current_user.id == @project.user_id  && @project.user_id != project_user.user.id %>
            <% if project_user.is_curator? %>
              <%= link_to "Remove curator role", remove_curator_path(@project.id, project_user.id), :confirm => "Are you sure you want to remove #{project_user.user.login} as a curator?"%>
            <% else %>
              <%= link_to "Make curator", make_curator_path(@project.id, project_user.id) %>
            <% end %>
          <% end -%>
        </td>
        <td width="25%">
          <% if logged_in? && current_user.id == @project.user_id  && @project.user_id != project_user.user.id %>
            <%= link_to "Remove project user", remove_project_user_path(@project.id, project_user.id), :confirm => "Are you sure you want to remove #{project_user.user.login} from this project?"%>
          <% end -%>
        </td>
      </tr>
    <% end %>
    </table>
    <%= will_paginate @project_users, :renderer => INatLinkRenderer %>
  <% end -%>
</div>

<div class="breadcrumbs">
  <strong><%= link_to "&laquo #{h @project.title}", @project, :class => 'crumb' %></strong>
</div><!-- /#breadcrumbs -->
