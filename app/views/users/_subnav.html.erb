<ul id="subnav" class="clear">
  <% if logged_in? && current_user.id == user.id -%>
    <li>
      <%= link_to "Home", home_path, :class => "#{'active' if current_page?(:controller => "users", :action => "dashboard")}" %>
    </li>
  <% end -%>
  <li>
    <%= link_to 'Observations', observations_by_login_path(user.login), 
      :id => "observations_link", 
      :class => "#{'active' if current_page?(:controller => :observations, :action => :by_login)}" %>
  </li>
  <li>
    <%= link_to 'Calendar', calendar_path(user.login), 
      :id => "calendar_link", 
      :class => "#{'active' if controller.is_a?(CalendarsController)}" %>
  </li>
  <li>
    <%= link_to 'Lists', lists_by_login_path(user.login), :id => "lists_link",
      :class => "#{'active' if current_page?(:controller => :lists, :action => :by_login)}" %>
  </li>
  <li>
    <%= link_to 'Journal', journal_by_login_path(:login => user.login), 
      :id => "journal_link",
      :class => "#{'active' if @controller.request.request_uri =~ /\/journal\//}" %>
  </li>
  <li>
    <%= link_to 'Identifications', identifications_by_login_path(:login => user.login), 
      :id => "identifications_link",
      :class => "#{'active' if current_page?(:controller => :identifications, :action => :by_login)}" %>
  </li>
  <li>
    <%= link_to 'Projects', projects_by_login_path(:login => user.login), 
      :id => "projects_link",
      :class => "#{'active' if current_page?(:controller => :projects, :action => :by_login)}" %>
  </li>
  <li>
    <%= link_to 'Profile', person_by_login_path(:login => user.login), 
      :id => "profile_link",
      :class => "#{'active' if current_page?(:controller => :users, :action => :show)}" %>
  </li>
  <% if logged_in? && is_not_me?(user) %>
  <li>
    <%= friend_button current_user, user, {:id => 'follow_button'} %>
  </li>
  <% end %>
</ul>
